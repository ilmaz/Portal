@model Portal.Web.Pages.Posts.IndexModel
@{
    ViewData["Title"] = "Posts";
}

    <div class="row">

        @foreach (var item in Model.PostList)
        {
            <div class="col-sm-4">
                <div class="card m-1">
                   
                        <img src="http://localhost:5305/api/image/thumb/@item.Id" alt="@item.Name" class="img-fluid" />
                  
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>

                            <a asp-page="/posts/details" asp-area="" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                        </div>
                </div>
            </div>
        }
    </div>

