@inject IConfiguration Configuration

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title | Portal </title>

    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    @RenderSection("styles", required: false)

</head>
<body>

    <partial name="_Navbar" />

    <main role="main" class="container-fluid" style="padding-top:5px;padding-bottom:5px;">
        @RenderBody()
    </main>
    <footer class="border-top footer text-muted py-4">
        <div class="container">
            &copy; 2020 - Codehaks.com - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
